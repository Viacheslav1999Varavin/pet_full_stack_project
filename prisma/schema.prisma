generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String    @unique
  phoneNumber    String    @unique
  hashedPassword String    @unique
  avatar         String
  comments       Comment[]
}

model Comment {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  avatar   String
  name     String
  text     String
  rating   String
  author   User   @relation(fields: [authorId], references: [id])
  authorId String @db.ObjectId
}

model Course {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  image      String
  header     String
  buttonText String
  link       String
  count      Int
}

model Lesson {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  avatar     String
  title      String
  text       String
  header     String
  videoLink  String
  buttonText String
  materials  Int
}

model Book {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  image String
  link  String
}

model Certificate {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  image String
  link  String
}
